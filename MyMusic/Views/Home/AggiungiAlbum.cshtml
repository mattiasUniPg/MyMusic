@model AlbumViewModel;

@{
    ViewBag.Title = "Hai Aggiunto un Album";
}

@if (ViewBag.Message != null)
{
    <div roll="alert" class="alert alert-success">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div>Edit Album:</div>
        <hr>
        @Html.HiddenFor(model => model.IDAlbum) @* Per nascondere l'ID' *@
        <div class="form-group">
            @Html.LabelFor(model => model.TitoloAlbum, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.TitoloAlbum)
            </div>
        </div>
        <hr>
        <div class="form-group">
            @Html.LabelFor(model => model.BandAlbum, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.BandAlbum)
            </div>
        </div>
         <hr>
        <div class="form-group">
            @Html.LabelFor(model => model.BraniAlbum, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.BraniAlbum)
            </div>
        </div>
         <hr>
        <div class="form-group">
            @Html.LabelFor(model => model.AnnoUscitaAlbum, htmlAttributes: new {@class = "label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.AnnoUscitaAlbum)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salva" class="btn btn-primary"/>
            </div>
        </div>

    </div>
}


<div>
    @Html.ActionLink("Indietro","Index")
</div>
